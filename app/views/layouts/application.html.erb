<!DOCTYPE html>
<html lang="en">
<head>
  <title>Schedulify</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= javascript_importmap_tags %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-...your-integrity-hash..." crossorigin="anonymous">
  </head>
  <body>
  <nav class="navbar navbar-expand-lg" style="position: fixed; left: 0; right: 0; top: 0;background-color: #0c0c0c8a;">
  <div class="container">
      <%= link_to "Schedulify", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
      <div class="collapse navbar-collapse" id="navbarNav">
         <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Admin", admin_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "Event", new_handler_path, class: "nav-link" %>
          </li>
            <li class="nav-item">
            <%= link_to "Analytics", analytics_path, class: "nav-link" %>
          </li>
            <li class="nav-item">
              <%= link_to "Social Accounts", social_accounts_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
              </div>
              </div>
              </nav>
              
              <main>
              <%= yield %>
              </main>
              <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></>
</body>
</html>
