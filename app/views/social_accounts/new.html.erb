<h1 class="new-social-account-heading">New Social Account</h1>

<div class="social-account-form-container">
  <%= render "form", social_account: @social_account %>
</div>

<div class="back-link-container">
  <%= link_to "Back to social accounts", social_accounts_path, class: "back-link" %>
</div>

<style>
.new-social-account-heading {
  font-size: 2.5rem; 
  color: white; 
  text-align: center;
  margin-top: 2.5rem; 
  margin-bottom: 1.5rem;
}

.social-account-form-container {
  max-width: 700px;
  margin: 0 auto;
  padding: 2.5rem; 
  border: 1px solid #ddd; 
  border-radius: 10px;
  background-color: #fff; 
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
}

.back-link-container {
  text-align: center;
  margin-top: 2rem; 
}

.back-link {
  color: #007bff; 
  text-decoration: none;
  font-size: 1.1rem; /* Slightly larger font size for better visibility */
  font-weight: 500; /* Medium weight for better emphasis */
}

.back-link:hover {
  text-decoration: underline;
  color: #0056b3; /* Darker color on hover for better contrast */
}
</style>
